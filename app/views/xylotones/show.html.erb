<div id="xylo-box">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1"
       width="800px" height="500px" viewBox="0 0 800 500" enable-background="new 0 0 1280 720" xml:space="preserve" id="view-area" z-index="1">

  <% @xylotone.shown_dots.each do |dot| %>
    <circle cx="<%= dot.xcoord%>" cy="<%= dot.ycoord %>" r="<%= (dot.gray/100).to_f/50.0 %>" class='full' data-id="<%= dot.id %>"/>
  <% end %>

</svg>
<div id="selection-box" class="hidden"></div>
</div>
<div id="buttons">
<h2 id="show">show deleted</h2><h2 id="hide">hide deleted</h2>
<button href="<%= xylotone_path(@xylotone)%>" method="put" class="save-image" data-image-id="<%= @xylotone.id %>">Save</button>
</div>